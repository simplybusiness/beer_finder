<% @outlets.each do |outlet| %>
  <div class="card">
    <div class="card-body">
      <div class="container">
        <div class="row">
          <div class="col-sm">
            <h4 class="card-title"><%= outlet.name %> <small><%= outlet.outlet_type %></small></h4>
            <h6 class="card-subtitle mb-2"><%= outlet.address %>, <%= outlet.postcode %></h6>
          </div>
          <div class="col-sm">
            <div class="card-text">
              <ul class="list-group">
                <% @stocks.each do |stock| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div><span><%= image_tag "#{stock.serving_style == 'can' ? 'beer-can' : 'tap'}.png", size: "24x24" %></span> <%= stock.name %></div>
                    <small><%= time_ago_in_words(stock.delivery_date) %> ago</small>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  </br>
<% end %>
