<% @outlets.each do |outlet| %>
  <div class="card">
    <div class="card-body">
      <div class="container">
        <div class="row">
          <div class="col-sm">
            <h5 class="card-title"><%= outlet.name %> <small class="text-muted"><%= outlet.type %></small></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= outlet.address.join(', ') %>, <%= outlet.postcode %></h6>
          </div>
          <div class="col-sm">
            <div class="card-text">
              <ul class="list-group">
                <% outlet.stock.each do |stock| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div><%= image_tag "#{stock.serving_style == 'can' ? 'beer-can' : 'tap'}.png", size: "20x20" %> <%= stock.name %></div>
                    <small class="text-muted"><%= time_ago_in_words(stock.delivery_date) %> ago</small>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  </br>
<% end %>
